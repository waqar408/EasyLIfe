<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".trainerside.fragments.TrainerChatFragment">

    <TextView
        android:id="@+id/tvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textColor="@color/haiti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:textSize="@dimen/_14sdp"
        />


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_below="@+id/tvChat"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/bg_white_rounded_20dp"
        android:elevation="@dimen/_10sdp">

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:contentDescription="@string/text_todo"
            android:src="@drawable/ic_search_icn"
            app:tint="@color/searchcoloricon" />

        <EditText
            android:id="@+id/edSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_toEndOf="@id/image_search"
            android:background="@null"
            android:fontFamily="@font/barlow_regular"
            android:gravity="center_vertical"
            android:hint="Search here..."
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/searchcoloricon"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_app_color_rounded_100dp"
            android:elevation="@dimen/_10sdp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/text_todo"
                android:src="@drawable/ic_dictation" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_search"
        android:layout_marginTop="@dimen/_16sdp"
        tools:itemCount="3"

        tools:listitem="@layout/item_chats" />

    <com.agrawalsuneet.dotsloader.loaders.TrailingCircularDotsLoader
        android:id="@+id/dotloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:trailingcircular_animDelay="600"
        app:trailingcircular_animDuration="1200"
        app:trailingcircular_bigCircleRadius="24dp"
        android:visibility="gone"
        app:trailingcircular_dotsColor="@color/appColor"
        app:trailingcircular_dotsRadius="@dimen/_5sdp"
        app:trailingcircular_noOfTrailingDots="5" />
    <TextView
        android:id="@+id/tvNoChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Chat Found"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/black"
        android:visibility="gone"/>

</RelativeLayout>