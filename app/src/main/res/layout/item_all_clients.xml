<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_85sdp"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/personprofileicon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


            <LinearLayout
                android:layout_toEndOf="@+id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_semibold"
                        android:text="Mikey Lecan"
                        android:lines="1"
                        android:textColor="@color/haiti"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/tvusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_medium"
                        android:lines="1"
                        android:text="Body Specialist"
                        android:textColor="@color/haitidark"
                        android:textSize="@dimen/_10sdp" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/rlWorkout"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_24sdp"
                            android:elevation="@dimen/_24sdp"
                            android:outlineAmbientShadowColor="@color/black"
                            android:outlineSpotShadowColor="@color/black"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:background="@drawable/ed_stroked_back_green"
                                android:fontFamily="@font/barlow_medium"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_20sdp"
                                android:text="Workout"
                                android:textColor="@color/greenYearColor"
                                android:textSize="@dimen/_9sdp" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/rlNutrition"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:textColor="@color/greenYearColor"
                            android:fontFamily="@font/barlow_medium"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center"
                            android:text="Nutrition"
                            android:background="@drawable/ed_stroked_back_green"
                            android:paddingHorizontal="@dimen/_20sdp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>