<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userside.activities.auth.GenderSelectionActivity">

    <RelativeLayout
        android:id="@+id/layout_backArrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_white_rounded_8dp"
        android:elevation="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/text_todo"
            android:src="@drawable/ic_back_arrow" />

    </RelativeLayout>

    <TextView
        android:visibility="invisible"
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/barlow_regular"
        android:padding="@dimen/_3sdp"
        android:text="@string/skip"
        android:textColor="@color/smokey_grey"
        android:textSize="@dimen/_13sdp" />
        <ImageView
            android:id="@+id/imgline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/progresslinegender"
            android:layout_below="@+id/layout_backArrow"
            android:layout_marginTop="@dimen/_36sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"/>

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_36sdp"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:text="@string/gender"
        android:textColor="@color/haiti"
        android:textSize="@dimen/_17sdp" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_gender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:text="@string/helpustocreate"
        android:textColor="@color/smokey_grey"
        android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:id="@+id/layout_maleFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:weightSum="2"
            android:layout_below="@+id/text_description"
            android:layout_marginTop="@dimen/_24sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlMale"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:background="@drawable/bg_gray_rounded_30dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/text_todo"
                    android:src="@drawable/maleicon" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_female"
                android:layout_width="0dp"
                android:layout_height="@dimen/_140sdp"
                android:background="@drawable/bg_gray_rounded_30dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/text_todo"
                    android:src="@drawable/femaleicon" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_maleFemale"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            >

            <TextView
                android:id="@+id/tvMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/barlow_semibold"
                android:text="@string/male"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:textColor="@color/smokey_grey"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:id="@+id/tvFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/barlow_semibold"
                android:text="@string/female"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:textColor="@color/smokey_grey"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_send"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_30sdp"
            android:background="@drawable/bg_green_rounded_30dp"
            android:elevation="@dimen/_12sdp">

            <TextView
                android:id="@+id/tvnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_36sdp"
                android:fontFamily="@font/barlow_medium"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_36sdp"
                android:layout_toEndOf="@+id/tvnext"
                android:src="@drawable/ic_forward_white" />

        </RelativeLayout>
</RelativeLayout>