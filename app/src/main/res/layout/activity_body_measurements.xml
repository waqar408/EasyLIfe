<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/porcelain"
    tools:context=".userside.activities.bodymeasurement.BodyMeasurementsActivity">
    <RelativeLayout
        android:id="@+id/layout_backArrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_white_rounded_8dp"
        android:elevation="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/text_todo"
            android:src="@drawable/ic_back_arrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_22sdp"
        android:fontFamily="@font/barlow_semibold"
        android:text="Body Measurements"
        android:textColor="@color/haiti"
        android:textSize="@dimen/_14sdp" />
    <ScrollView
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@+id/layout_backArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/ed_stroked_back_green"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/barlow_medium"
                    android:text="Age"
                    android:textColor="@color/colorc" />

                <EditText
                    android:id="@+id/edAge"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@null"
                    android:lines="1"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/ed_stroked_back_green"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/barlow_medium"
                    android:text="Weight"
                    android:textColor="@color/colorc" />
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp">
                    <EditText
                        android:layout_weight="0.4"
                        android:id="@+id/edWeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:lines="1"
                        android:cursorVisible="true"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/_11sdp"
                        android:textCursorDrawable="@drawable/cursor"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_16sdp" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_weight="0.4"
                    android:id="@+id/lnFeet"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/ed_stroked_back_green"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:weightSum="1">
                    <EditText
                        android:textCursorDrawable="@drawable/cursor"
                        android:layout_weight="0.5"
                        android:id="@+id/edFeet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:inputType="number"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/haiti"
                        android:textSize="@dimen/_14sdp"
                        android:text="ft"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_gravity="center"/>
                    <EditText
                        android:textCursorDrawable="@drawable/cursor"
                        android:layout_weight="0.5"
                        android:id="@+id/edInch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="number"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/haiti"
                        android:textSize="@dimen/_14sdp"
                        android:text="Inch"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.4"
                    android:id="@+id/lnCm"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/ed_stroked_back_green"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:weightSum="1">
                    <EditText
                        android:textCursorDrawable="@drawable/cursor"
                        android:layout_weight="0.5"
                        android:id="@+id/edCm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:inputType="number"
                        />
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/haiti"
                        android:textSize="@dimen/_14sdp"
                        android:text="cm"
                        android:gravity="center"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/ed_stroked_back_green"
                    android:orientation="vertical"
                    android:layout_weight="0.6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/barlow_medium"
                        android:text="Height Unit"
                        android:textColor="@color/colorc" />
                    <Spinner
                        android:id="@+id/spinnerHeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginVertical="@dimen/_30sdp"
                android:background="@drawable/bg_green_rounded_30dp"
                android:elevation="@dimen/_12sdp">

                <TextView
                    android:id="@+id/tvnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/barlow_medium"
                    android:text="Update Measurements"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <com.agrawalsuneet.dotsloader.loaders.TrailingCircularDotsLoader
        android:id="@+id/dotloader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:trailingcircular_animDelay="600"
        app:trailingcircular_animDuration="1200"
        app:trailingcircular_bigCircleRadius="24dp"
        app:trailingcircular_dotsColor="@color/appColor"
        app:trailingcircular_dotsRadius="@dimen/_5sdp"
        app:trailingcircular_noOfTrailingDots="5" />

</RelativeLayout>